@model Gallery
@{
	ViewData["Title"] = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
	<h2>Resim Ekle</h2>
	<hr />
	<form asp-area="admin" asp-controller="gallery" asp-action="create" method="post" enctype="multipart/form-data">
		<div asp-validation-summary="All"></div>
		@* Image File *@
		<div class="form-group mb-3">
			<label asp-for="ImageName" class="form-label">Resim</label><br/>
			<input type="file" name="imageFile" id="imageFile" class="form-control">
		</div>
		<div class="form-group mb-3">
			<button type="submit" class="btn btn-dark">Ekle</button>
		</div>
	</form>
</div>