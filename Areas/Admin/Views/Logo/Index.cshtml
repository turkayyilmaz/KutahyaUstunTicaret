@model Logo
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
	<h2>Logo Ekle</h2>
	<hr />
	<form asp-area="Admin" asp-controller="Logo" asp-action="Index" method="post" enctype="multipart/form-data">
		<div asp-validation-summary="All"></div>
		<input type="hidden" asp-for="LogoId" />
		@* Image File *@
		<div class="form-group mb-3">
			<label asp-for="Image" class="form-label">Logo</label><br />
			<input type="file" name="imageFile" id="imageFile" class="form-control">
			<span asp-validation-for="Image" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<img src="~/Img/Logo/@Model.Image" width="100px" />
			<input type="hidden" asp-for="Image" />
		</div>
		<div class="form-group mb-3">
			<button type="submit" class="btn btn-dark">Ekle</button>
		</div>
	</form>
</div>
