@model Brand
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
	<h2>Marka Sil</h2>
	<hr />
	<form asp-area="Admin" asp-controller="Brand" asp-action="Delete" method="post">
		<input type="hidden" asp-for="BrandId" />
		<h4>"@Model.BrandName" isimli markayı silmek istediğinden emin misin?</h4>
		<h5>Dikkat! Sileceğin markaya ait bütün ürünler de silincektir.</h5>
		<div class="form-group mb-3">
			<button type="submit" class="btn btn-dark">Evet</button>
			<a class="btn btn-danger" asp-area="Admin" asp-controller="Brand" asp-action="Index">Hayır</a>
		</div>
	</form>
</div>