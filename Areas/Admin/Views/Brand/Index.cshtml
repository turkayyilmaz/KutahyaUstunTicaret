@model List<Brand>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
	int count = 0;
}


<div class="container mt-5">
	<h2>Markalar</h2>
	<hr />
	<a asp-area="Admin" asp-controller="Brand" asp-action="Create" class="btn btn-dark mb-3">Yeni Marka Ekle</a>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Marka</th>
				<th scope="col">Güncelle</th>
				<th scope="col">Sil</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				count++;
				<tr>
					<th scope="row">@count</th>
					<td>@item.BrandName</td>
					<td><a class="btn btn-dark" asp-area="Admin" asp-controller="Brand" asp-action="Edit" asp-route-id="@item.BrandId">Güncelle</a></td>
					<td><a class="btn btn-danger" asp-area="Admin" asp-controller="Brand" asp-action="Delete" asp-route-id="@item.BrandId">Sil</a></td>
				</tr>
			}
		</tbody>
	</table>
</div>