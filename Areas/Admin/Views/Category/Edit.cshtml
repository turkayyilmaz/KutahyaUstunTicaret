@model Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
	<h2>Kategori Güncelle</h2>
	<hr />
	<form asp-area="Admin" asp-controller="Category" asp-action="Edit" method="post">
		<input type="hidden" asp-for="CategoryId" />
		<div class="form-group mb-3">
			<label class="form-label" asp-for="CategoryName">Kategori Adı</label>
			<input type="text" class="form-control" asp-for="CategoryName" placeholder="Kategori adı...">
		</div>
		<div class="form-group mb-3">
			<button type="submit" class="btn btn-dark">Güncelle</button>
		</div>
	</form>
</div>